<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient"
    tools:context="com.mehak.make_my_bill.ui.MainActivity">
    <include
        layout="@layout/app_bar"
        android:id="@+id/app_bar"></include>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginBottom="15dp"

android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        app:cardBackgroundColor="@color/cardview_shadow_start_color">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"

        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        app:cardBackgroundColor="@color/cardview_shadow_start_color"
        android:layout_marginBottom="30dp"
        android:layout_height="match_parent">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            app:cardBackgroundColor="@color/cardview_shadow_start_color"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"

            android:layout_marginBottom="30dp"
            android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/gradient"
            android:layout_marginRight="10dp"
            android:orientation="vertical">
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="120dp"
            android:layout_height="150dp"

            android:layout_alignParentTop="true"
        android:layout_gravity="center"
            android:layout_centerHorizontal="true"
            android:onClick="product"

          android:layout_marginTop="40dp"
            app:srcCompat="@drawable/add_pro" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Products"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginLeft="5dp"
            android:textColor="@color/colorpurple"
            android:layout_marginTop="-20dp"
           android:layout_gravity="center"/>

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="120dp"
            android:layout_height="150dp"

            android:layout_gravity="center"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"

            android:onClick="innvoice"
            android:layout_marginTop="65dp"
            app:srcCompat="@drawable/make_invoice" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Make Invoice"
            android:textStyle="bold"
            android:textSize="20dp"
android:layout_marginLeft="3dp"
            android:textColor="@color/colorpurple"
            android:layout_marginTop="-16dp"
            android:layout_gravity="center"/>
        </LinearLayout>
                </android.support.v7.widget.CardView>
            </android.support.v7.widget.CardView>
        </android.support.v7.widget.CardView>


</LinearLayout>
